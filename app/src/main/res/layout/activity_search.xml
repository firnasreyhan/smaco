<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity"
    android:orientation="vertical"
    android:background="#f5f6fa">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/montserrat_bold"
            android:text="Cari Smartphone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_brand"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Merek"/>

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/sBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/montserrat_light"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cpu"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvCpu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Prosesor"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgCpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowCpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidCpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighCpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/etCpu"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="numberDecimal"
                            android:hint="123456789" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text=" GHz"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_ram"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvRam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="RAM"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgRam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowRam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidRam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighRam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/etRam"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="number"
                            android:hint="123456789"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text=" GB"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_folder"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvStorage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Penyimpanan"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgStorage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowStorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidStorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighStorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/etStorage"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="number"
                            android:hint="123456789"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text=" GB"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_camera"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvCamera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Kamera"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgCamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/etCamera"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="numberDecimal"
                            android:hint="123456789"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text=" MP"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_energy"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvBattery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Baterai"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgBattery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/etBattery"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="number"
                            android:hint="123456789"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text=" mAh"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_price_tag"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Harga"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLowPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:text="Dibawah"/>

                        <RadioButton
                            android:id="@+id/rbMidPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Sama"/>

                        <RadioButton
                            android:id="@+id/rbHighPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:layout_marginLeft="10dp"
                            android:text="Diatas"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:fontFamily="@font/montserrat_semibold"
                            android:text="Rp. "/>

                        <EditText
                            android:id="@+id/etPrice"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/montserrat_light"
                            android:inputType="number"
                            android:hint="123456789"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mbSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:textAllCaps="false"
                        android:text="Cari"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>